<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextLabel" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorHint">#4285F4</item>
        <item name="colorAccent">#4285F4</item>
        <item name="colorControlNormal">#4285F4</item>
        <item name="colorControlActivated">#4285F4</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize dialog window background -->
        <item name="android:windowBackground">@layout/custom_dialog</item>
        <!-- Customize dialog title style -->
        <item name="android:windowTitleStyle">@style/CustomDialogTitle</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="CustomDialogTitle" parent="TextAppearance.AppCompat.Title">
        <!-- Customize title text appearance -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Add more customizations as needed -->
    </style>

</resources>