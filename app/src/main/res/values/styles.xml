<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextLabel" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorHint">#4285F4</item>
        <item name="colorAccent">#4285F4</item>
        <item name="colorControlNormal">#4285F4</item>
        <item name="colorControlActivated">#4285F4</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize dialog window background -->
        <item name="android:windowBackground">@layout/custom_dialog</item>
        <!-- Customize dialog title style -->
        <item name="android:windowTitleStyle">@style/CustomDialogTitle</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="CustomDialogTitle" parent="TextAppearance.AppCompat.Title">
        <!-- Customize title text appearance -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="Button.FullWidth" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxWidth">@null</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog.FullWidthButtons">
        <item name="materialAlertDialogButtonSpacerVisibility">2</item>
        <item name="buttonBarPositiveButtonStyle">@style/Button.FullWidth</item>
        <item name="buttonBarNegativeButtonStyle">@style/Button.FullWidth</item>
        <item name="buttonBarNeutralButtonStyle">@style/Button.FullWidth</item>
    </style>

    <style name="classicLook" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>
        <item name="colorSecondary">?attr/colorPrimaryVariant</item>
    </style>

    <style name="BorrowActivityTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/color_for_borrow</item>
        <item name="colorSecondary">@color/color_for_borrow</item>
        <item name="android:statusBarColor">@color/color_for_borrow</item>
    </style>

    <style name="ExpenseActivityTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/color_for_expense</item>
        <item name="colorSecondary">@color/color_for_expense</item>
        <item name="android:statusBarColor">@color/color_for_expense</item>
    </style>

    <style name="LendActivityTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/color_for_lend</item>
        <item name="colorSecondary">@color/color_for_lend</item>
        <item name="android:statusBarColor">@color/color_for_lend</item>
    </style>

    <style name="PartyActivityTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/color_for_party</item>
        <item name="colorSecondary">@color/color_for_party</item>
        <item name="android:statusBarColor">@color/color_for_party</item>
    </style>

    <style name="reportsActivityTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/color_for_reports</item>
        <item name="colorSecondary">@color/color_for_reports</item>
        <item name="android:statusBarColor">@color/color_for_reports</item>
    </style>
    <style name="settingsActivityTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/color_for_settings</item>
        <item name="colorSecondary">@color/color_for_settings</item>
        <item name="android:statusBarColor">@color/color_for_settings</item>
    </style>
</resources>