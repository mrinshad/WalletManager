<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/button_layout_settings"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="18sp">

            <TextView
                android:id="@+id/logout_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_list_item"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/list_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting_list_item_desc"
                android:textSize="10sp" />
        </LinearLayout>

        <Switch
            android:id="@+id/list_item_toggle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"
            android:visibility="gone"
            android:checked="false" />
    </RelativeLayout>
</LinearLayout>